# Trakt API Configuration
# Get your API key from: https://trakt.tv/oauth/applications
TRAKT_API_KEY=your_trakt_api_key_here

# TMDB API Configuration (Optional - for movie posters)
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Gemini AI Configuration (Optional - for AI features)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://cinematec_user:cinematec_password@localhost:5432/cinematec_explorer
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cinematec_explorer
DB_USER=cinematec_user
DB_PASSWORD=cinematec_password

# TTS Configuration (Optional)
TTS_ENABLED=true
TTS_VOICE=en-US-AriaNeural
TTS_RATE=1.0
TTS_PITCH=1.0